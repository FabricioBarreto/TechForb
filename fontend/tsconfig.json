{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["jsonwebtoken"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/helpers/showSidebar.jsx",
    "src/app/components/Dashboard/Header/Header.tsx",
    "src/app/components/Dashboard/Card/Card.tsx",
    "src/app/hooks/useAuth.js",
    "src/app/hooks/useAuthHeader.js",
    "src/app/login/page.tsx",
    "src/app/signup/page.tsx",
    "src/app/transaction/page.tsx",
    "src/app/page.tsx",
    "src/app/layout.tsx",
    "src/app/components/Dashboard/Dashboard.tsx",
    "src/app/imageupload/page.tsx",
    "src/app/components/Dashboard/SideMenu/SideMenu.tsx"
  ],
  "exclude": ["node_modules"]
}
